%h2 Products
.table-responsive
  %table.table.table-bordered.table-hover.table-striped
    %thead
      %tr
        %th Name
        %th Length
        %th Width
        %th Height
        %th Weight
        %th{colspan: 2}= link_to 'Add', new_admin_product_path, class: 'btn btn-secondary pull-right btn-block'
    %tbody
      - @products.each do |p|
        %tr
          %td= link_to p.name, admin_product_path(p), class: 'btn'
          %td= p.length
          %td= p.width
          %td= p.height
          %td= p.weight
          %td= link_to 'Edit', edit_admin_product_path(p), class: 'btn btn-primary btn-block btn-sm'
          %td= link_to 'Delete', admin_product_path(p), class: 'btn btn-danger btn-block', method: :delete, data: { confirm: 'Are you sure you want to delete this product?' }
